generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  email          String     @unique
  password       String
  sessionKey     String?    @unique
  createdAt      DateTime   @default(now())
  logs       LogEntry[]
}

model LogEntry {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  date      String   // ISO date, e.g., "2025-05-26"

  // Tracked durations (in seconds)
  files     FileEntry[]
  folders   FolderEntry[]
  languages LanguageEntry[]

  createdAt DateTime @default(now())

  @@index([userId, date], name: "by_user_date")
}

model FileEntry {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  logEntry  LogEntry @relation(fields: [logEntryId], references: [id])
  logEntryId String

  filePath  String
  duration  Int
}

model FolderEntry {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  logEntry   LogEntry  @relation(fields: [logEntryId], references: [id])
  logEntryId String

  folderPath String
  duration   Int
}

model LanguageEntry {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  logEntry   LogEntry  @relation(fields: [logEntryId], references: [id])
  logEntryId String

  language   String
  duration   Int
}
